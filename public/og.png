<svg width="1200" height="630" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1200 630">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="0%" y2="100%">
      <stop offset="0%" style="stop-color:#0a0a0a;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#1a1a1a;stop-opacity:1" />
    </linearGradient>
  </defs>

  <rect width="1200" height="630" fill="url(#bg)"/>

  <!-- Grid pattern (subtle) -->
  <defs>
    <pattern id="grid" width="60" height="60" patternUnits="userSpaceOnUse">
      <path d="M60 0H0V60" fill="none" stroke="white" stroke-opacity="0.03" stroke-width="1"/>
    </pattern>
  </defs>
  <rect width="1200" height="630" fill="url(#grid)"/>

  <!-- Logo box -->
  <rect x="80" y="80" width="120" height="120" rx="20" fill="white"/>
  <text x="140" y="165" font-family="Arial, sans-serif" font-size="72" font-weight="900" text-anchor="middle" fill="#0a0a0a">PT</text>

  <!-- Main heading -->
  <text x="260" y="120" font-family="Arial, sans-serif" font-size="56" font-weight="bold" fill="white">
    Build your MVP &amp;
  </text>
  <text x="260" y="200" font-family="Arial, sans-serif" font-size="56" font-weight="bold" fill="white">
    first 10 customers
  </text>

  <!-- Subheading -->
  <text x="260" y="260" font-family="Arial, sans-serif" font-size="28" fill="#b3b3b3">
    Pay from success via equity or revenue share
  </text>

  <!-- Trust badges -->
  <g>
    <!-- Badge 1 -->
    <circle cx="280" cy="360" r="12" fill="white" opacity="0.3"/>
    <text x="310" y="370" font-family="Arial, sans-serif" font-size="20" fill="#e0e0e0">POPIA-ready</text>

    <!-- Badge 2 -->
    <circle cx="280" cy="430" r="12" fill="white" opacity="0.3"/>
    <text x="310" y="440" font-family="Arial, sans-serif" font-size="20" fill="#e0e0e0">SA legal templates</text>

    <!-- Badge 3 -->
    <circle cx="280" cy="500" r="12" fill="white" opacity="0.3"/>
    <text x="310" y="510" font-family="Arial, sans-serif" font-size="20" fill="#e0e0e0">Weekly demos</text>
  </g>

  <!-- CTA button -->
  <rect x="260" y="560" width="220" height="50" rx="12" fill="white"/>
  <text x="370" y="595" font-family="Arial, sans-serif" font-size="20" font-weight="bold" text-anchor="middle" fill="#0a0a0a">Apply now</text>

  <!-- Accent line -->
  <line x1="500" y1="80" x2="500" y2="550" stroke="white" stroke-opacity="0.1" stroke-width="2"/>
</svg>
